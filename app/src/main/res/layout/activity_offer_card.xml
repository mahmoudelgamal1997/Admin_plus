<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/main"
    tools:context="com.example2017.android.admin.OfferCard">





    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add persons to code"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:onClick="addperson"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:onClick="test"
        android:layout_marginBottom="10dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add shop to all code"
        android:id="@+id/button7"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:onClick="addshop"
        android:textColor="#FFFFFF"
        android:background="#2196F3"

        />
        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="details"
        android:id="@+id/button8"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true"
        android:onClick="details"
        android:textColor="#FFFFFF"
        android:background="#2196F3"

            />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اضافه محل واحد لكود واحد"
        android:id="@+id/button9"
        android:layout_below="@+id/button8"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="onecode"
        android:textColor="#FFFFFF"
        android:background="#2196F3"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="delete"
        android:textColor="#FFFFFF"
        android:background="#2196F3"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="عدد زيارات المحلات "
        android:id="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="visit"
        android:textColor="#FFFFFF"
        android:background="#2196F3"

        />



</RelativeLayout>
